@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    
    <title>Daylight - David Kushner</title>

    <style>
        body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
  color: #ffffff;
  text-align: center;
  overflow-x: hidden;
}

h1 {
  margin-top: 40px;
  font-size: 2.5em;
  font-weight: 600;
  animation: slideDown 1.2s ease-out;
}

.video-wrapper {
  margin: 30px auto;
  max-width: 560px;
  transition: transform 0.4s ease;
}

.video-wrapper:hover {
  transform: scale(1.05);
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.4);
}

.description {
  max-width: 600px;
  margin: 20px auto;
  font-size: 1.1em;
  font-weight: 300;
}

.fade-in {
  opacity: 0;
  animation: fadeIn 2s ease forwards;
}

#hearts-container {
  position: absolute;
  top: 0;
  left: 0;
  pointer-events: none;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.heart {
  position: absolute;
  font-size: 24px;
  color: #ff4081;
  animation: floatHeart 5s linear infinite;
}

@@keyframes floatHeart {
  0% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) scale(0.5);
    opacity: 0;
  }
}

@@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

@@keyframes slideDown {
  from {
    transform: translateY(-40px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

    </style>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap" rel="stylesheet">
</head>
<body>
    <h1 class="fade-in">Daylight – David Kushner</h1>

    <div class="video-wrapper fade-in">
        <iframe width="560" height="315"
                src="https://www.youtube.com/embed/MoN9ql6Yymw" title="David Kushner - Daylight (Official Music Video)"
                frameborder="0"
                allowfullscreen>
        </iframe>
    </div>

    <p class="description fade-in">“Daylight” explores the battle between darkness and redemption. A haunting melody with powerful lyrics.</p>

    <!-- Heart container -->
    <div id="hearts-container"></div>

    <script>
        function createHeart() {
  const heart = document.createElement('div');
  heart.classList.add('heart');
  heart.textContent = '❤️';

  heart.style.left = Math.random() * 100 + 'vw';
  heart.style.animationDuration = (3 + Math.random() * 3) + 's';

  document.getElementById('hearts-container').appendChild(heart);

  // Remove heart after it floats
  setTimeout(() => {
    heart.remove();
  }, 6000);
}

// Generate hearts every half second
setInterval(createHeart, 500);

console.log("Animations loaded!");

    </script>
</body>
</html>

